<!--beginning of container div-->
<div class="container">
  <h1>Eat-Da-Burger!</h1>

<!--user input burgers will go in this div-->
<div class="row">
    <div class="col-md-6 col-left" id="enter-burger">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

<!--Devoured burgers will go in this div-->
    <div class="col-md-6 col-right" id="devoured-burger">
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/if}}
      {{/each}}
    </div>
</div>

<!--Submitted burger form-->
<form class="create-form">
    <div class="form-group">
      <label for="name"></label>
      <textarea id="burger" name="burger_name" rows="2" cols="40" placeholder="Enter da burger"></textarea>
    </div>
      <button type="submit" id="submit">Submit-Da-Burger</button>
</form>


<!--end container div-->
</div>